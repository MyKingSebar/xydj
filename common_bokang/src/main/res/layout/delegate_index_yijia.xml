<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_index"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@android:color/white"
        app:layout_behavior="com.example.latte.ec.main.index.TranslucentBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/icon_index_scan"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="start|bottom"
                android:paddingStart="14dp"
                android:paddingBottom="13dp"
                android:text="{icon-yscan}"
                android:textColor="@color/main_text_black_dark"
                android:textSize="22sp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="壹家"
                android:textColor="@color/main_text_black_dark"
                android:textSize="18sp" />

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/icon_index_message"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="start|bottom"
                android:paddingEnd="16dp"
                android:paddingBottom="13dp"
                android:text="{icon-ycamera}"
                android:textColor="@color/main_text_black_dark"
                android:textSize="22sp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv_friends"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="15dp">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="15dp">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="{icon-yedit}"
            android:textColor="@color/app_text_orange"
            android:textSize="22sp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="和亲友记录流光岁月吧！"
            android:textColor="@color/app_text_dark"
            android:textSize="18sp"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_invite"
            android:layout_width="88dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/icon_index_invite"
            />

    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_index"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="144dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_index"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>


</android.support.design.widget.CoordinatorLayout>