<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_edit_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_line_ef" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="151dp"
        android:layout_height="178dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="67dp"
        android:background="@mipmap/background_invite" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_wechat"
        android:layout_width="226dp"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="52dp"
        android:background="@drawable/botton_invite_wechat"
        android:gravity="center"
        android:text="微信邀请"
        android:textColor="#00D140"
        android:textSize="@dimen/main_content" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_note"
        android:layout_width="226dp"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="52dp"
        android:background="@drawable/botton_invite_wechat"
        android:gravity="center"
        android:text="短信邀请"
        android:textColor="#4693DB"
        android:textSize="@dimen/main_content" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="29dp">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_guardian"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/invite_checkbox"
            android:button="@null"
            android:checked="false" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="是否为监护人"
            android:textColor="@color/main_text_orange"
            android:textSize="15sp" />


    </android.support.v7.widget.LinearLayoutCompat>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_invitecode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="60dp"
        android:gravity="center_horizontal"
        android:text="邀请码：XXXXXX\n对方下载”壹家App“输入邀请码完成验证，\n就可以看到你的照片及最新变化了。"
        android:textColor="#BEBEBE"
        android:lineSpacingExtra="10dp"
        android:textSize="15sp" />

</android.support.v7.widget.LinearLayoutCompat>