<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical"

            >

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_link_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:gravity="center"
                    android:text="登录"
                    android:textColor="@color/app_text_orange"
                    android:textSize="18sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_link_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:text="注册"
                    android:textColor="@color/app_text_dark"
                    android:textSize="18sp" />
            </android.support.v7.widget.LinearLayoutCompat>

            <!--电话-->
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="58dp"
                android:layout_marginRight="40dp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="13dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_login_phone" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_login_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="28dp"
                        android:gravity="center_vertical"
                        android:hint="请输入您的手机号码"
                        android:inputType="textPhonetic"
                        android:textColorHint="@color/app_text_hint"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />


                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:id="@+id/v_signup_phone_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="43dp"
                android:background="@color/app_text_orange" />


            <!--密码-->
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="41dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="40dp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_login_password" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_login_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="25dp"
                        android:gravity="center_vertical"
                        android:hint="请输入您的密码，至少6位"
                        android:inputType="textPassword"
                        android:textColorHint="@color/app_text_hint"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />


                </android.support.design.widget.TextInputLayout>


            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:id="@+id/v_signin_password_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="43dp"
                android:background="#EFEFEF" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="41dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="40dp">


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_login_chenge_note"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="2dp"
                    android:gravity="center_vertical"
                    android:text="短信登录"
                    android:textColor="@color/app_text_dark"
                    android:textSize="12sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_login_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="4dp"
                    android:gravity="center_vertical"
                    android:text="忘记密码"
                    android:textColor="@color/app_text_dark"
                    android:textSize="12sp" />


            </RelativeLayout>


            <android.support.v7.widget.AppCompatButton

                android:id="@+id/btn_sign_in"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginStart="41dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="40dp"
                android:background="@mipmap/buttom_login_gray"
                android:gravity="center"
                android:padding="12sp"
                android:text="登录"
                android:textColor="@color/app_text_gray"
                tools:ignore="HardcodedText" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="第三方登录"
                android:textColor="@color/app_text_dark"
                android:textSize="12sp" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_marginBottom="94dp"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/im_login_qq"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_login_qq" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/im_login_weibo"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="54dp"
                    android:layout_marginEnd="54dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_login_weibo" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/im_login_wechart"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_login_wechart" />

            </android.support.v7.widget.LinearLayoutCompat>


        </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>