<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_edit_top"/>


<RelativeLayout
    android:id="@+id/rl_search"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_width="match_parent"
    android:layout_height="35dp">
    <android.support.v7.widget.AppCompatTextView
        android:text="搜索亲友"
        android:textSize="@dimen/third_title_16"
        android:drawableLeft="@mipmap/index_edit_choosefriend_searsh"
        android:drawablePadding="10dp"
        android:textColor="@color/main_text_gary_99"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.example.latte.ui.contactlist.search.CharIndexView
            android:id="@+id/iv_main"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            app:indexTextSize="13sp"
            app:charTextColor="@color/main_text_gary_99"
            app:indexTextColor="@color/main_text_white"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_index"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="invisible"
            android:text="A"
            android:gravity="center"
            android:background="@drawable/bg_index"/>

    </RelativeLayout>

</LinearLayout>