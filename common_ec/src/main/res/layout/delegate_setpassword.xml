<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.latte.ui.widget.HeadLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"></com.example.latte.ui.widget.HeadLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <EditText
            android:id="@+id/original_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:theme="@style/MyEditText"
            android:drawableLeft="@mipmap/yuanmima"
            android:drawablePadding="30dp"
            android:hint="请输入您的原密码"
            android:textColorHint="#C2C2C2"
            android:maxLength="11"
            android:maxLines="1"
            android:inputType="textPassword"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:textColor="@color/light_black"
            android:textSize="15dp" />


        <EditText
            android:id="@+id/new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:theme="@style/MyEditText"
            android:inputType="textPassword"
            android:drawableLeft="@mipmap/new_pwd"
            android:drawablePadding="30dp"
            android:hint="请输入您的新密码"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:textColorHint="#C2C2C2"
            android:paddingBottom="15dp"
            android:textColor="@color/light_black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:text="密码必须是8-16位的数字和字母(不能是纯数字)"
            android:textColor="#C2C2C2"
            />

        <EditText
            android:id="@+id/confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:theme="@style/MyEditText"
            android:drawableLeft="@mipmap/confirm_pwd"
            android:drawablePadding="30dp"
            android:hint="请确认您的密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:textColorHint="#C2C2C2"
            android:textColor="@color/light_black"
            android:textSize="15dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="40dp"
            android:background="@mipmap/buttom_login_gray"
            android:gravity="center"
            android:padding="12sp"
            android:text="完成"
            android:textColor="@color/app_text_gray"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>