<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/app_text_gray"
        android:textSize="13sp"
        tools:text="10分钟前" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_zan"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@+id/tv_share"
        android:background="@mipmap/icon_zan" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_share"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="33dp"
        android:background="@mipmap/icon_share"

        />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_zan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_marginStart="41dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_below="@+id/tv_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="6dp"
            android:background="@mipmap/icon_zan" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_getzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/app_text_dark"
            android:textSize="13sp"
            tools:text="爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸爸" />


    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_zan"
        android:layout_marginStart="41dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="18dp">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_comment"
        android:layout_marginStart="41dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="18dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:paddingStart="27dp"
        android:text="我也说一句"
        android:textColor="@color/app_text_gray"
        android:textSize="13sp" />
</RelativeLayout>