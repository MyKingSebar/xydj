<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ViewStub
            android:id="@+id/head_return"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:padding="2dp"
            android:layout="@layout/head_left" />

        <ViewStub
            android:id="@+id/head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout="@layout/head_name"
            android:text="名字"
            android:textColor="#000"
            android:textSize="20sp" />

        <ViewStub
            android:id="@+id/head_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout="@layout/head_right_text"
            android:text="发送"
            android:textSize="16sp"
            android:visibility="gone" />

        <ViewStub
            android:id="@+id/head_right_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:padding="2dp"
            android:layout="@layout/head_right_image"
             />
    </RelativeLayout>
</LinearLayout>